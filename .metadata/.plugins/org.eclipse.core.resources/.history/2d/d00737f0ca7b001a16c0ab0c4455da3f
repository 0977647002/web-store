package com.nguyentanhuy.sevice.iplm;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.nguyentanhuy.dto.ProductDTO;
import com.nguyentanhuy.entity.ProductEntity;
import com.nguyentanhuy.repository.ProductRepository;
import com.nguyentanhuy.sevice.IProductService;
import com.nguyentanhuy.util.iplm.ProductMapping;

@Service
public class ProductService implements IProductService{

	@Autowired
	private ProductRepository productRepository;
	
	public List<ProductEntity> findAll() {
		return productRepository.findAll();
	}

}
