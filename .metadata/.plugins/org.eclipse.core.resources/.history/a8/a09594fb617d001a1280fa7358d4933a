package com.nguyentanhuy.sevice.iplm;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.nguyentanhuy.entity.Product;
import com.nguyentanhuy.repository.ProductRepository;
import com.nguyentanhuy.sevice.IProductService;

@Service
public class ProductService implements IProductService{

	@Autowired
	private ProductRepository productRepository;
	
	public List<Product> findAll() {
		return productRepository.findAll();
	}

	public Product findById(Long id) {
		return productRepository.findOne(id);
	}

	public void update(Product product) {
//		productRepository.update(product.getId(), product.getName(), product.getUrl(), product.getPrice(), product.getSale(), product.getDescription(), product.getStatus());
	}

	public void detele(Product product) {
		productRepository.delete(product);
	}

	public void save(Product product) {
		productRepository.save(product);
	}

}
